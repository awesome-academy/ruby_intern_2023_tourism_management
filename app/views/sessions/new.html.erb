<%= stylesheet_link_tag "new", media: "all", "data-turbolinks-track": "reload" %>
<% provide :title, t(".title") %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-xl-10 col-lg-12 col-md-9">
      <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
          <div class="row">
            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
            <div class="col-lg-6">
              <div class="p-5">
                <div class="text-center">
                  <h1 class="h4 text-gray-900 mb-4"><%= t ".title" %></h1>
                </div>
                <%= form_for :session, url: login_path, html: { class: "user" } do |f| %>
                  <div class="form-group">
                    <%= f.label :email %>
                    <%= f.email_field :email, class: "form-control form-control-user" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, class: "form-control form-control-user" %>
                  </div>
                  <div class="form-group">
                    <div class="custom-control">
                      <%= f.label :remember_me do %>
                        <%= f.check_box :remember_me %>
                        <span><%= t ".remember_me_text" %></span>
                      <% end %>
                    </div>
                  </div>
                  <%= f.submit t(".login_button"), class: "btn btn-primary btn-user btn-block" %>
                <% end %>
                <hr />
                <div class="text-center">
                  <%= link_to t(".forgot_password_text"), "#", class: "small" %>
                </div>
                <div class="text-center">
                  <%= link_to t(".create_account_text"), "#", class: "small" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
