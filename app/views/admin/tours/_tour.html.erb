<tr>
  <th><%= index %></th>
  <th><%= image_tag tour.display_image %></th>
  <th><%= tour.name %></th>
  <th><%= tour.category_name %></th>
  <th><%= number_to_currency tour.cost %></th>
  <th><%= tour.visit_location %></th>
  <th><%= l(tour.start_date) %></th>
  <th><%= l(tour.end_date) %></th>
  <th>
    <% if Date.today < tour.start_date %>
      <%= link_to t(".edit_tour_text"), edit_admin_tour_path(tour) %>
    <% end %>
  </th>
</tr>
