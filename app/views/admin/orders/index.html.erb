<% provide :title, t(".title") %>
<% content_for :management do %>
  <div class="order-header-navbar flex">
    <div class="search_input">
      <%= form_tag admin_orders_path, method: :get, remote: true, class: "search" do %>
        <%= text_field_tag :search_text %>
        <%= select_tag :status_search, options_for_select(load_search_status) %>
        <%= submit_tag t(".search_button"), class: "btn btn-success" %>
      <% end %>
    </div>
    <div id="order_navbar" class="order-navbar">
      <%== pagy_bootstrap_nav @pagy_orders %>
    </div>
  </div>
  <div class="order-table">
    <table>
      <thead>
        <tr>
          <th><%= t ".order_table.order_number" %></th>
          <th><%= t ".order_table.image" %></th>
          <th><%= t ".order_table.tour_name" %></th>
          <th><%= t ".order_table.cost" %></th>
          <th><%= t ".order_table.member" %></th>
          <th><%= t ".order_table.contact_name" %></th>
          <th><%= t ".order_table.contact_phone" %></th>
          <th><%= t ".order_table.contact_address" %></th>
          <th><%= t ".order_table.tour_guide" %></th>
          <th><%= t ".order_table.total_cost" %></th>
          <th><%= t ".order_table.status" %></th>
        </tr>
      </thead>
      <tbody id="order_paginate">
        <%= render @orders %>
      </tbody>
    </table>
  </div>
<% end %>
