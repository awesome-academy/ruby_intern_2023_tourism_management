<% provide :title, t(".title") %>
<% content_for :management do %>
  <div class="order-header-navbar flex">
    <div class="search_input">
      <%= form_tag admin_orders_path, method: :get, remote: true, class: "search" do %>
        <%= text_field_tag :search_text %>
        <%= select_tag :status_search, options_for_select(load_search_status) %>
        <%= submit_tag t(".search_button"), class: "btn btn-success" %>
      <% end %>
    </div>
    <div id="order_navbar" class="order-navbar">
      <%== pagy_bootstrap_nav @pagy_orders %>
    </div>
  </div>
  <div class="order-table">
    <table>
      <thead>
        <tr>
          <% headers = Array.new Settings.order_header_table %>
          <% headers.each do |header| %>
            <th><%= header %></th>
          <% end %>
        </tr>
      </thead>
      <tbody id="order_paginate">
        <%= render @orders %>
      </tbody>
    </table>
  </div>
<% end %>
