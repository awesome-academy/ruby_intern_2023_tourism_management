<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title yield :title %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "custom", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_pack_tag "application", "data-turbolinks-track": "reload", defer: true %>
    <%= render "layouts/shim" %>
    <link
      href="/admin_layout/vendor/fontawesome-free/css/all.min.css"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />
    <link href="/admin_layout/css/sb-admin-2.min.css" rel="stylesheet" />
  </head>

  <body>
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>

    <% if admin_login? %>
      <%= render "admin/admin" %>
    <% else %>
      <div class="header">
        <%= render "layouts/header" %>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    <% end %>

    <script src="/admin_layout/vendor/jquery/jquery.min.js"></script>
    <script src="/admin_layout/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/admin_layout/vendor/jquery-easing/jquery.easing.min.js"></script>
    <script src="/admin_layout/js/sb-admin-2.min.js"></script>
  </body>
</html>
